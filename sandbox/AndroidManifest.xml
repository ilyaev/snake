        <meta-data android:name="com.google.android.gms.games.APP_ID"
    android:value="@string/app_id" />
        
        <meta-data android:name="com.google.android.gms.version"
		    android:value="@integer/google_play_services_version" />
        
        <activity android:name="pbartz.games.snake.SnakeBox" android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="pbartz.games.snake.First" android:label="@string/app_name">
        </activity>
        
        <activity android:name="pbartz.games.snake.DrawBox" android:label="@string/app_name">
        </activity>
        
        <activity android:name="pbartz.games.snake.StartScreen" android:label="@string/app_name">
        </activity>
        
        
        
    </application>

